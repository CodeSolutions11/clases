Instalar React con vite => 
	npm create vite@latest
  	npm install
  	npm run dev

instalar tailwindCss en React =>
	npm install -D tailwindcss postcss autoprefixer
	npx tailwindcss init -p

Configurar TailwindCss en React

	tailwind.config.js
		content: [
    			"./index.html",
    			"./src/**/*.{js,ts,jsx,tsx}",
  		]

	index.css
		@tailwind base;
		@tailwind components;
		@tailwind utilities;